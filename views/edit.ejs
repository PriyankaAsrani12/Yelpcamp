<%for(var i=0;i<campground.length;i++){%>
<div class="container">
    <h1 style="text-align:center;">Edit <%=campground[i]["Name"]%></h1>
    <div class="row">
        <div style="width=30%; margin:20px auto;">
            <form action="/campgrounds/<%=campground[i]["UserId"]%>/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" value="<%=campground[i]["Name"]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" value="<%=campground[i]["ImageURL"]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description" value="<%=campground[i]["Description"]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="price" placeholder="price" min="0.01" step="0.01" value="<%=campground[i]["price"]%>">
                </div>
                <div class="form-group">
                    <button class="btn-md btn-block btn-primary" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div style="text-align:center;">
        <a href="/campgrounds/<%=campground[i]["UserId"]%>">Go Back!</a>
    </div>
</div>
<%}%>